@model PMANews.Areas.Identity.Data.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container justify-content-md-center text-center col-md-6">
        <h4>Are you sure you want to delete category @Model.Name?</h4>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group ">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
