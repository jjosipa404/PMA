@using Microsoft.AspNetCore.Identity
@using PMANews.Areas.Identity.Data
@using System.Security.Claims;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager



<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">&commat;@UserManager.GetUserName(User) </a>
        </li>
 
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Posts", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-light">Log Out</button>
            </form>
        </li>
    }
    else
    {

        <li class="nav-item">
            <a class="btn btn-success" href="/Identity/Account/RegisterUser">Sign Up</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-link text-decoration-none text-light" href="/Identity/Account/Login">Log In</a>
        </li>
    }
</ul>
